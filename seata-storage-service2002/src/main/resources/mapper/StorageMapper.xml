<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zyj.springCloud.mapper.StorageMapper">

    <resultMap id="BaseResultMap" type="com.zyj.springCloud.bean.Storage">
        <id column="id" property="id"/>
        <result column="product_id" property="productId"/>
        <result column="total" property="total"/>
        <result column="used" property="used"/>
        <result column="residue" property="residue"/>
    </resultMap>

    <update id="decrease">
        update t_storage
        set total = total - #{count}, used = used + #{count}, residue = residue - #{count}
        where product_id = #{productId}
    </update>
</mapper>